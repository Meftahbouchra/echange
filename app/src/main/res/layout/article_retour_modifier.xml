<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/linyar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:orientation="horizontal">

            <EditText
                android:id="@+id/edittxt_article"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="30dp"
                android:background="@drawable/bordr_table"
                android:gravity="center"
                android:hint="Tapez ici ce que vous voulez appuyes sur + "
                android:padding="10dp"
                android:paddingLeft="20dp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="45dp"
                android:background="@drawable/bordr_table">

                <TextView
                    android:id="@+id/ajout_article"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/ic_add_black_24dp" />
            </LinearLayout>

        </LinearLayout>


        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rec_retour"
            android:layout_width="300dp"
            android:layout_height="287dp"
            android:layout_below="@+id/linyar"
            android:layout_marginLeft="40dp"

            android:layout_marginTop="17dp"
            android:layout_marginBottom="103dp">

        </androidx.recyclerview.widget.RecyclerView>
    </RelativeLayout>
</LinearLayout>