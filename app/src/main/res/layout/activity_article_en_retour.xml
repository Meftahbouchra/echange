<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#efefef"
    tools:context=".activities.annonce.Article_en_retour">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/gris"
        android:id="@+id/txtv1"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/annuler"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:layout_marginStart="5dp"
            android:drawableStart="@drawable/ic_keyboard_backspace_"
            android:drawableTint="@color/orange" />
    </LinearLayout>

 <include layout="@layout/article_retour_modifier"
     android:layout_width="match_parent"
     android:layout_height="wrap_content"
     android:layout_below="@id/txtv1"/>



    <Button
        android:id="@+id/ok"
        android:layout_width="280dp"
        android:layout_height="40dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:layout_marginEnd="72dp"
        android:layout_marginBottom="26dp"
        android:background="@drawable/btn_floating"
        android:text="Envoyer"
        android:textAllCaps="false"
        android:textColor="@color/Login_form_details" />


</RelativeLayout>