<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.Article_en_retour">

    <TextView
        android:id="@+id/txtv1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:gravity="center"
        android:text="Que voulez-vous en retour?"
        android:textColor="@color/black"
        android:textSize="19sp" />

    <LinearLayout
        android:id="@+id/linyar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtv1"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/edittxt_article"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/bordr_table"
            android:gravity="center"
            android:hint="Tapez ici ce que vous voulez appuyes sur + "
            android:padding="10dp"
            android:paddingLeft="20dp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/bordr_table">

            <TextView
                android:id="@+id/ajout_article"
                android:layout_width="20dp"
                android:layout_height="wrap_content"
                android:background="@drawable/ic_add_black_24dp" />
        </LinearLayout>

    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rec_retour"
        android:layout_marginBottom="32dp"
        android:layout_alignBottom="@id/ok"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/linyar"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="16dp">

    </androidx.recyclerview.widget.RecyclerView>


    <TextView
        android:id="@+id/ok"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="19dp"
        android:layout_marginBottom="29dp"
        android:text="Ok"
        android:textColor="@color/black"
        android:textSize="20dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="35dp"
        android:layout_marginBottom="17dp"
        android:text="Annuler"
        android:textColor="@color/black"
        android:textSize="20dp" />


</RelativeLayout>