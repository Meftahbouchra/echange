<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#efefef"
    tools:context=".fragments.Modifier">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/gris"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/retour"
                android:layout_width="60dp"
                android:layout_height="match_parent"
                android:layout_marginStart="5dp"
                android:drawableStart="@drawable/ic_keyboard_backspace_"
                android:drawableTint="@color/orange" />

            <TextView
                android:id="@+id/menu"
                android:layout_width="60dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="290dp"
                android:drawableStart="@drawable/ic_done_black_24dp"
                android:drawableTint="@color/orange" />


        </LinearLayout>


        <EditText

            android:id="@+id/nom_annonce"
            android:layout_width="match_parent"
            android:layout_height="58dp"
            android:layout_below="@+id/intro"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginHorizontal="32dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/card_items"
            android:gravity="center_vertical"
            android:inputType="text"
            android:paddingLeft="10dp"
            android:textColorHint="@color/gris" />


        <ImageView
            android:id="@+id/img_annonc"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:layout_marginHorizontal="32dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/card_items"
            app:srcCompat="@drawable/user" />

        <EditText
            android:id="@+id/desci_annonce"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginHorizontal="32dp"
            android:layout_marginTop="32dp"
            android:background="@drawable/card_items"
            android:inputType="text"
            android:paddingLeft="10dp"
            android:paddingBottom="150dp"
            android:textColorHint="@color/gris" />

        <Spinner

            android:id="@+id/spinner_cat"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginHorizontal="32dp"
            android:layout_marginTop="32dp"
            android:background="@drawable/card_items" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginHorizontal="32dp"
            android:layout_marginTop="32dp"
            android:layout_weight="2"
            android:orientation="horizontal">

            <Spinner
                android:id="@+id/spinner_wilaya"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_below="@+id/spinner_cat"
                android:layout_marginEnd="8dp"
                android:layout_weight="1"
                android:background="@drawable/card_items" />

            <Spinner
                android:id="@+id/spinner_ville"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_marginStart="8dp"
                android:layout_weight="1"
                android:background="@drawable/card_items" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="32dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/card_items"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:layout_gravity="center"
            android:layout_centerHorizontal="true"

            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_margin="16dp"
                android:layout_marginTop="15dp"
                android:background="#efefef"
                android:gravity="center"
                android:text="L'article dÃ¨sire en retour"
                android:textColor="@color/orange"
                android:textSize="17sp" />

            <LinearLayout
                android:layout_margin="16dp"
                android:layout_marginTop="15dp"
                android:id="@+id/linyar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txtv1"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/edittxt_article"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/bordr_table"
                    android:gravity="center"
                    android:hint="Tapez ici ce que vous \n  voulez appuyes sur + "
                    android:padding="2dp"
                    android:paddingLeft="2dp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="2dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/bordr_table">

                    <TextView
                        android:id="@+id/ajout_article"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/ic_add_black_24dp" />
                </LinearLayout>
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rec_retour"
                    android:layout_width="300dp"
                    android:layout_height="287dp"
                    android:layout_below="@+id/linyar"
                    android:layout_alignBottom="@id/ok"
                    android:layout_marginLeft="40dp"

                    android:layout_marginTop="17dp"
                    android:layout_marginBottom="103dp">

                </androidx.recyclerview.widget.RecyclerView>
            </LinearLayout>
        </LinearLayout>


    </LinearLayout>
</androidx.core.widget.NestedScrollView>