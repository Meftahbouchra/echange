<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_marginTop="45dp"
        android:layout_gravity="center_horizontal"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/user"/>
    <TextView
        android:layout_marginTop="10dp"
        android:layout_gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Meftah Bouchra"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="21sp"/>
    <ImageView
        android:layout_margin="16dp"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/grey"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp"
        android:layout_margin="16dp"
        android:orientation="vertical">




        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=" Messages"
            android:id="@+id/message"
            android:drawableTint="@color/orange"
            android:drawablePadding="9dp"
            android:textColor="@color/black"
            android:drawableStart="@drawable/ic_message"
            android:layout_marginTop="15dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=" Notifications"
            android:id="@+id/notification"
            android:drawableTint="@color/orange"
            android:drawablePadding="9dp"
            android:textColor="@color/black"
            android:drawableStart="@drawable/ic_notifications"
            android:layout_marginTop="15dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Historiques"
            android:id="@+id/historique"
            android:textColor="@color/black"
            android:drawableTint="@color/orange"
            android:drawablePadding="9dp"
            android:drawableStart="@drawable/ic_history"
            android:layout_marginTop="15dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Paramètres"
            android:id="@+id/parametre"
            android:drawableTint="@color/orange"
            android:drawablePadding="9dp"
            android:textColor="@color/black"
            android:drawableStart="@drawable/ic_settings"
            android:layout_marginTop="15dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=" Partager"
            android:id="@+id/parteger"
            android:drawableTint="@color/orange"
            android:textColor="@color/black"
            android:drawablePadding="9dp"
            android:drawableStart="@drawable/ic_share"
            android:layout_marginTop="15dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=" Se dèconnecter"
            android:id="@+id/lougout"
            android:drawableTint="@color/orange"
            android:drawablePadding="9dp"
            android:drawableStart="@drawable/ic_input"
            android:textColor="@color/black"
            android:layout_marginTop="15dp"/>
    </LinearLayout>
</LinearLayout>