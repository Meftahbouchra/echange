<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="8dp"

    >
    <!--heid 260dp-->

    <RelativeLayout
        android:id="@+id/layout_offre"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_marginHorizontal="8dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/card_items"
        android:elevation="5dp">

        <TextView
            android:id="@+id/titte"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/select_manipulation"
            android:elevation="3dp"
            android:gravity="center"
            android:text="Hello world"
            android:textColor="@color/orange"
            android:textSize="22dp" />


        <ImageView
            android:id="@+id/img"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_below="@+id/titte"
            android:layout_marginLeft="6dp"
            android:layout_marginTop="13dp"
            android:layout_marginRight="6dp"
            android:background="@drawable/card_items"
            android:src="#ffffff" /><!--app:srcCompat="#ffffff"-->

        <TextView
            android:id="@+id/desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/img"
            android:layout_marginLeft="25sp"
            android:elevation="3dp"
            android:text="description"
            android:textColor="@color/black"
            android:textSize="18dp" />


        <LinearLayout
            android:id="@+id/position_date"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_below="@id/desc"

            android:orientation="horizontal">

            <TextView
                android:id="@+id/ville"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="25dp"
                android:drawableStart="@drawable/ic_location"
                android:drawableTint="@color/rouge"
                android:gravity="center"
                android:text="Ville,"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/commune"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dp"
                android:gravity="center"
                android:text="Commune"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/datH"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="100dp"
                android:layout_marginTop="10dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="date heure"
                android:textSize="12sp" />

        </LinearLayout>

        <TextView
            android:id="@+id/statu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/position_date"
            android:paddingLeft="30sp"
            android:text="Statu"
            android:textSize="15sp" />

    </RelativeLayout>

    <FrameLayout
        android:id="@+id/fragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:elevation="10dp" />

</RelativeLayout>