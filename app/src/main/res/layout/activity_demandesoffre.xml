<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layout_offre"
    android:layout_width="match_parent"
    android:layout_height="380dp"
    android:layout_marginHorizontal="8dp"
    android:layout_marginTop="8dp"
    android:background="@drawable/card_offre_refuse"
    android:elevation="5dp"
    android:orientation="vertical">


    <RelativeLayout
        android:id="@+id/relative_profie"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/img_user"
            android:layout_width="60dp"
            android:layout_height="70dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="5dp"
            android:src="@drawable/user"></de.hdodenhof.circleimageview.CircleImageView>

        <TextView
            android:id="@+id/nom_user"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginLeft="85dp"
            android:layout_marginTop="20sp"
            android:text="Meftah Bouchra"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/datH"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/nom_user"
            android:layout_marginLeft="85dp"
            android:layout_marginTop="8dp"
            android:text="21/02/2020 18:27"
            android:textColor="#404040"
            android:textSize="12sp" />


    </RelativeLayout>


    <TextView
        android:id="@+id/titte_offre"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/relative_profie"
        android:elevation="3dp"
        android:gravity="center"
        android:text="Hello world"
        android:textColor="@color/orange"
        android:textSize="22dp" />


    <ImageView
        android:id="@+id/img_offre"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:layout_below="@+id/titte_offre"
        android:layout_margin="12dp"
        android:background="@drawable/card_items"
        android:src="#ffffff" />

    <TextView
        android:id="@+id/desc_offre"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/img_offre"
        android:layout_marginLeft="25sp"
        android:elevation="3dp"
        android:text="description"
        android:textColor="@color/black"
        android:textSize="18dp" />


    <LinearLayout
        android:id="@+id/position"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/desc_offre"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/ville"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="25dp"
            android:drawableStart="@drawable/ic_location"
            android:drawableTint="@color/rouge"
            android:gravity="center"
            android:text="Ville"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/commune"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:gravity="center"
            android:text="Commune"
            android:textColor="@color/black" />


    </LinearLayout>
</RelativeLayout>